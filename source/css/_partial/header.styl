header
  height 52px
  margin-bottom: 20px
  background: #171f26
  color: #9d9d9d
  box-shadow: 0 2px 4px 1px rgba(0,0,0,0.5)
  @media screen and (max-width: 770px)
    height 48px
    margin-bottom: 15px
  .content
    position: relative
    display: flex
    align-items: center
    justify-content: space-between
    width: 1140px
    margin: 0 auto
    height: 100%
    @media screen and (max-width: 770px)
      width: 95%
    @media screen and (max-width: 1200px) and (min-width: 770px)
      width: 90%
#nav
  li
    background: #171f26
    display: inline-block
    transition: 0.2s ease
    &.active
      background: #090e13
      color: #fff
      box-shadow: 0 25px 25px -15px rgba(255,255,255,0.93)
    a
      height 52px
      display inline-block
      line-height 52px
      color: inherit 
      transition: 0.2s ease
      padding: 0 20px
      .fa 
        margin-right: 5px
  @media screen and (max-width: 770px)
    position: absolute
    z-index: 100
    right: 0
    top: 47px
    text-align: center
    visibility: hidden
    transform-origin: 100% 0%
    transform: scale(0.1)
    opacity: 0
    transition: 0.2s cubic-bezier(0.5, 0.1, 0.51, 1.38)
    li
      display: block
      &.active
        box-shadow: none
      a
        height: 40px
        line-height: 40px
#mobile-nav-toggle
  position: absolute
  top: 0
  bottom: 0
  right: 10px
  width: 25px
  height: 20px
  margin: auto
  opacity: .5
  cursor: pointer
  transition: .2s cubic-bezier(0.5, 0.1, 0.51, 1.38)
  @media screen and (min-width: 770px)
    display: none
.mobile-nav-on 
  @media (max-width: 770px)
    #nav
      opacity: 1
      transform: scale(1)
      visibility: visible
      li
        display: block
        height: 40px
        line-height: 40px
        border-bottom: 1px solid #333

.mobile-nav-toggle-bar
  background: #fff
  position: absolute
  left: 0
  width: 100%
  height: 2px
  transition: .4s
  transform-origin: 0
  border-radius: 2px
  &:first-child
    top: 0
  &:nth-child(2)
    top: 9px
  &:last-child
    top: 18px

.mobile-nav-on
  .mobile-nav-toggle-bar
    &:first-child
      transform: rotate(45deg)
    &:nth-child(2)
      opacity: 0
    &:last-child
      transform: rotate(-45deg)