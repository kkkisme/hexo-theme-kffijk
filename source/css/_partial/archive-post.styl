.archive-post
  padding: 1em 0
  border-top: 1px solid #e3e3e3
  &:first-child
    border-top: 0
.archive-post-link
  display: block
  color: #444
  line-height: 1.6em
  &:before, &:after
    content: ''
    display: table
  &:after
    clear: both
  .archive-post-title
    float: left
    font-weight: 700
.archive-post-date
  color: #999
  float: right
  font-size: .9em
  