<article class="archive-post" itemscope itemtype="http://schema.org/Article">
  <a class="archive-post-link" href="<%- url_for(post.path) %>">
    <strong class="archive-post-title" itemprop="name">
      <%- post.title %>
    </strong>
    <span class="archive-post-date"><time datetime="<%- post.date.format() %>"><%- post.date.format('YYYY-MM-DD') %></time></span>
  </a>
</article>